---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
<!-- 品牌展示区 -->
  <section id="brand" style="text-align:center; margin-bottom:2rem;">
    <img 
      src="/banner-logo.png" 
      alt="Petstellation" 
      width="3000" 
      height="1687"
      style="max-width:100%; height:auto; display:block; margin:0 auto;" 
    />
    <h1 style="color:#333333; font-weight:bold; font-size:2.5rem; margin:1rem 0 0 0;">
      Welcome to Petstellation!
    </h1>
    <p style="color:#888888; font-size:1rem; margin:0.5rem 0 0 0;">
      Welcome to our little corner of the universe - a cozy space for animal lovers and stargazers alike.
    </p>
  </section>

  <!-- 产品分类展示 -->
  <section id="products">
    <!-- 每个类目 -->
    <div class="category">

    <div class="category-header">
  <h2>PET THEME PARTY CARDS & VET CHECK-UP CARDS</h2>
  <a
    href="https://your-lemon-link.com/birthday-cards"
    target="_blank"
    class="view-all"
  >
    View all →
  </a>
</div>
      
      <ul>
       <li>
      <a href="https://lemon-squeezy.com/checkout/product_1">
        <img src="/product-1.png" alt="产品1" width="360" height="360" />
        <h4>产品1名称</h4>
      </a>
      </li>
      <li>
      <a href="https://lemon-squeezy.com/checkout/product_2">
        <img src="/product-2.png" alt="产品2" width="360" height="360" />
        <h4>产品2名称</h4>
      </a>
    </li>
     <li>
      <a href="https://lemon-squeezy.com/checkout/product_3">
        <img src="/product-3.png" alt="产品3" width="360" height="360" />
        <h4>产品3名称</h4>
      </a>
    </li>
 <li>
      <a href="https://lemon-squeezy.com/checkout/product_4">
        <img src="/product-4.png" alt="产品4" width="360" height="360" />
        <h4>产品4名称</h4>
      </a>
    </li>
 <li>
      <a href="https://lemon-squeezy.com/checkout/product_5">
        <img src="/product-5.png" alt="产品5" width="360" height="360" />
        <h4>产品5名称</h4>
      </a>
    </li>
 <li>
      <a href="https://lemon-squeezy.com/checkout/product_6">
        <img src="/product-6.png" alt="产品6" width="360" height="360" />
        <h4>产品6名称</h4>
      </a>
    </li>
  </ul>
  </div>
  </section>
		</main>

<style>
  /* 类目标题 */
  .category h2 {
  text-align: left;
  color: #888888;      /* 浅灰色 */
  font-weight: bold;    /* 加粗 */
  font-size: 1.8rem;
  margin: 2rem 0 1rem 0;
}

  /* 每个类目的产品列表 */
  .category ul {
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* 每行 4 个 */
    gap: 1.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .category ul li {
    text-align: center;
  }

  .category ul li img {
    width: 100%;
    height: auto;
    border-radius: 12px;
  }

  .category ul li h4 {
    margin: 0.5rem 0 0 0;
    color: #333333;
    font-size: 1rem;
  }

  /* 响应式布局 */
  @media (max-width: 1024px) {
    .category ul {
      grid-template-columns: repeat(2, 1fr); /* 平板每行 2 个 */
    }
  }

  @media (max-width: 720px) {
    .category ul {
      grid-template-columns: repeat(2, 1fr); /* 手机每行 2 个 */
    }
  }
.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 2rem 0 1rem 0;
}

.category-header h2 {
  color: #888888;
  font-weight: bold;
  font-size: 1.8rem;
  margin: 0;
}

.view-all {
  font-size: 0.95rem;
  color: #999999;
  text-decoration: none;
}

.view-all:hover {
  color: #333333;
}
</style>
		<Footer />
	</body>
</html>
