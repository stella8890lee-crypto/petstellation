---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
<!-- 覆盖浏览器标签页标题 -->
  <title>Petstellation</title>

  <!-- 可选：覆盖搜索引擎看到的标题（meta） -->
  <meta name="title" content="Petstellation" />
  <meta name="description" content="A cozy space for animal lovers and stargazers alike" />
	</head>
	<body>
	<Header />
<!-- 全宽 Banner（不受 main 限制） -->
<section id="hero">
  <div class="hero-inner">
    <img src="/banner-logo.png" alt="Petstellation" />
  </div>
</section>
<main>
  <!-- 品牌文字区 -->
  <section class="brand-intro">
    <h1>
      Welcome to Petstellation!
    </h1>
    <p>
      Welcome to our little corner of the universe — a cozy space for animal lovers and stargazers alike.
    </p>
  </section>

  <!-- 类目导航 -->
  <nav class="category-nav">
    <a href="#birthday-cards">Party Cards</a>
    <a href="#gift-tags">Gift Tags</a>
    <a href="#training">Training Programs</a>
    <a href="#planners">Pet Planners</a>
    <a href="#checklists">Pet Checklists</a>
  </nav>

</main>

  <!-- 产品分类展示 -->
  <section id="products">
    <!-- 每个类目 -->
    <div class="category" id="birthday-cards">

    <div class="category-header">
  <h2>PARTY CARDS & VET CHECK-UP CARDS</h2>
  <a
    href="https://your-lemon-link.com/birthday-cards"
    target="_blank"
    class="view-all"
  >
    View all →
  </a>
</div>
      
      <ul>
       <li>
      <a href="https://lemon-squeezy.com/checkout/20A">
        <img src="/20A.jpg" alt="20A" width="360" height="360" />
        <h4>20A Vet Check-Up Card In 10 Languages – Multilingual Pet Birthday & Wellness Gift</h4>
        <p class="price">$8.99 USD</p>
      </a>
      </li>
      <li>
      <a href="https://lemon-squeezy.com/checkout/20D">
        <img src="/20D.jpg" alt="20D" width="360" height="360" />
        <h4>20D Vet Check-Up Card in 10 Languages – Pet Wellness Gift for Dog & Cat Birthdays or Anniversaries</h4>
        <p class="price">$8.99 USD</p>
      </a>
    </li>
     <li>
      <a href="https://lemon-squeezy.com/checkout/30A1">
        <img src="/30A1.jpg" alt="30A1" width="360" height="360" />
        <h4>30A1 Editable Pet Birthday Invitation Canva Template – Dog or Cat Party Invite – 5x7” Custom Printable Card</h4>
        <p class="price">$6.99 USD</p>
      </a>
    </li>
 <li>
      <a href="https://lemon-squeezy.com/checkout/30C-2">
        <img src="/30C-2.jpg" alt="30C-2" width="360" height="360" />
        <h4>30C-2 Watercolor Galaxy Pet Party Invitation Card – Editable Canva Template with Corgi Spaceship, Cat Astronauts & Custom Photo Option</h4>
        <p class="price">$8.99 USD</p>
      </a>
    </li>
 <li>
      <a href="https://lemon-squeezy.com/checkout/product_5">
        <img src="/product-5.png" alt="产品5" width="360" height="360" />
        <h4>产品5名称</h4>
      </a>
    </li>
 <li>
      <a href="https://lemon-squeezy.com/checkout/product_6">
        <img src="/product-6.png" alt="产品6" width="360" height="360" />
        <h4>产品6名称</h4>
      </a>
    </li>
  </ul>
  </div>
  </section>
		</main>

<style>
  /* 类目标题 */
  .category h2 {
  color: #888888;      /* 浅灰色 */
  font-weight: bold;    /* 加粗 */
  font-size: 1.8rem;
  margin: 2rem 0 1rem 0;
}

  /* 每个类目的产品列表 */
  .category ul {
  display: grid;
  grid-template-columns: repeat(4, 1fr); /* 固定每行 4 个 */
  justify-content: center; 
  gap: 1.5rem;
  list-style: none;
  padding: 0;
  margin: 0 auto;
  }

  .category ul li {
    text-align: center;
  }

  .category ul li img {
    width: 100%;
    height: auto;
    border-radius: 12px;
  }

  .category ul li h4 {
    margin: 0.5rem 0 0 0;
    color: #333333;
    font-size: 1rem;
  }

  /* 响应式布局 */
  @media (max-width: 1024px) {
    .category ul {
      grid-template-columns: repeat(2, 1fr); /* 平板每行 2 个 */
    }
  }

  @media (max-width: 720px) {
    .category ul {
      grid-template-columns: repeat(2, 1fr); /* 手机每行 2 个 */
    }
  }
.category-header {
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center;
  gap: 1.5rem; /* 标题和 View All 之间间距 */
  margin: 2rem 0 1rem 0;
}

.category-header h2 {
  color: #888888;
  font-weight: bold;
  font-size: 1.8rem;
  margin: 0;
}

.view-all {
  font-size: 0.95rem;
  color: #999999;
  text-decoration: none;
}

.view-all:hover {
  color: #333333;
}

.category ul li {
  text-align: center;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.category ul li:hover {
  transform: translateY(-4px);
}

.category ul li img {
  width: 100%;
  height: auto;
  border-radius: 12px;
  transition: box-shadow 0.2s ease;
}

.category ul li:hover img {
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
}

.category-nav {
  display: flex;
  justify-content: center;
  gap: 1.5rem;
  margin: 2rem 0;
  flex-wrap: wrap;
}

.category-nav a {
  text-decoration: none;
  font-size: 0.95rem;
  color: #666666;
  padding: 0.4rem 0.8rem;
  border-radius: 20px;
  background: #f5f5f5;
}

.category-nav a:hover {
  background: #eaeaea;
  color: #333333;
}

#hero {
  width: 100%;
  display: flex;
  justify-content: center; /* 水平居中 */
  padding: 2rem 0;
}

.hero-inner {
  display: flex;
  justify-content: center; /* 内部图片居中 */
  align-items: center;
  width: 75vw; /* 图片占屏幕 75% */
}

.hero-inner img {
  width: 100%;
  height: auto;
  display: block;
}

.brand-intro {
  text-align: center;
  margin: 1rem 0 0 0; /* 上边距改小，去掉多余空白 */
}

.brand-intro h1 {
  color: #333333;
  font-weight: bold;
  font-size: 2.5rem;
  margin: 0; /* 去掉默认 margin */
}

.brand-intro p {
  color: #888888;
  font-size: 1rem;
  margin: 0.3rem 0 0 0; /* 副标题和 h1 紧凑一点 */
}

</style>
		<Footer />
	</body>
</html>
