<script is:inline>
  const backToTop = document.getElementById('backToTop');
  const target = document.getElementById('top-categories');

  if (backToTop && target) {
    window.addEventListener('scroll', () => {
      backToTop.classList.toggle('show', window.scrollY > 300);
    });

    backToTop.addEventListener('click', () => {
      const offset = window.innerHeight * 0.33; // ⭐ 关键：往下留 33% 视口高度
      const top =
        target.getBoundingClientRect().top +
        window.pageYOffset -
        offset;

      window.scrollTo({
        top,
        behavior: 'smooth',
      });
    });
  }
