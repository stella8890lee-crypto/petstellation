---
interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonLink?: string;
}

const {
  title = "üéÅ A small welcome gift for you",
  description = "As a thank-you for being here, I‚Äôve prepared a free printable photo tag ‚Äî a little gift to celebrate the moment you and your pet found each other.",
  buttonText = "Get the free photo tag",
  buttonLink = "https://subscribepage.io/SAWdyR"
} = Astro.props;
---

<div class="welcome-gift">
  <h3>{title}</h3>
  <p>{description}</p>
  {buttonLink ? (
    <a
      href={buttonLink}
      target="_blank"
      rel="noopener noreferrer"
      class="gift-button"
    >
      {buttonText}
    </a>
  ) : null}
</div>

<style>
.welcome-gift {
  margin: 2rem 0;
  padding: 1.8rem 1.5rem;
  background: #fdf6f0;
  border: 2px solid #ffd5c2;
  border-radius: 16px;
  text-align: center;
}

.welcome-gift h3 {
  font-size: 1.5rem;
  margin-bottom: 0.6rem;
  color: #333;
}

.welcome-gift p {
  font-size: 1rem;
  color: #666;
  margin-bottom: 1.2rem;
}

.gift-button {
  display: inline-block;
  padding: 0.6rem 1.2rem;
  font-size: 1rem;
  font-weight: bold;
  color: #ffffff;
  background-color: #7b8f00;
  border-radius: 12px;
  text-decoration: none;
  transition: background 0.2s ease;
}

.gift-button:hover {
  background-color: #95a800;
}
</style>
